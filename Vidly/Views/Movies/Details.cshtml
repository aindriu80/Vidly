@model Vidly.Models.Movie


@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Genre:</th>
            <th>Release Date:</th>
            <th>Date Added:</th>
            <th>Number in Stock:</th>
        </tr>
    </thead>
    <tr>
        <td>@Model.Genre.Name</td>
        <td>@Model.ReleaseDate.ToLongDateString()</td>
        <td>@Model.DateAdded.ToLongDateString()</td>
        <td>@Model.NumberInStock</td>
            
    </tr>
    <tbody>
</table>